<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-secondary">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if(user) { %>
      <form action="/logout" method="post">
        <span>Logedin As: <%= user.email %></span>
        <button class="btn btn-outline-info">logout</button>
      </form>
    <% } else { %>
    <form class="d-flex" role="search" method="POST" action="/login">
      <input class="form-control me-2" name="username" type="search" placeholder="Username" aria-label="Search">
      <button class="btn btn-primary" type="submit">LogIn</button>
    </form>
    <% } %>
  </nav>
</header>




